<div class="page-header">
	<h1>Search result :</h1>
</div>

{{#if users}}
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Login</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			{{#each users}}
				<tr>
					<td><a href="/profil/{{login}}">{{name}}</a></td>
					<td>{{login}}</td>
					<td>{{email}}</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<div class="alert alert-warning">
		<p><strong>OMG!</strong> No result found...</p>
	</div>

	<h2>Try again :</h2>
	<form class="form-inline" role="search" action="/search" method="POST">
		<input type="text" class="form-control" name="keyword">
		<button class="btn btn-default" type="submit">Search</button>
	</form>
{{/if}}